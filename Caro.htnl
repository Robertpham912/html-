<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Caro 3x3 - Tic Tac Toe</title>
  <style>
    body {
      font-family: sans-serif;
      background: #f2f2f2;
      text-align: center;
      padding-top: 30px;
    }
    h1 {
      margin-bottom: 10px;
    }
    #game {
      display: grid;
      grid-template-columns: repeat(3, 100px);
      gap: 5px;
      justify-content: center;
      margin-top: 20px;
    }
    .cell {
      width: 100px;
      height: 100px;
      font-size: 40px;
      font-weight: bold;
      background: #fff;
      border: 2px solid #888;
      cursor: pointer;
    }
    #status {
      margin-top: 20px;
      font-size: 18px;
    }
    button {
      margin-top: 15px;
      padding: 10px 20px;
      font-size: 16px;
    }
  </style>
</head>
<body>
  <h1>üéØ Caro 3x3 - Tic Tac Toe</h1>
  <div id="game"></div>
  <div id="status"></div>
  <button onclick="resetGame()">üîÑ Ch∆°i l·∫°i</button>

  <script>
    const game = document.getElementById("game");
    const status = document.getElementById("status");
    let cells = [];
    let currentPlayer = "‚ùå";
    let gameOver = false;

    function checkWin() {
      const wins = [
        [0,1,2], [3,4,5], [6,7,8], // h√†ng ngang
        [0,3,6], [1,4,7], [2,5,8], // c·ªôt
        [0,4,8], [2,4,6]           // ch√©o
      ];

      for (let combo of wins) {
        const [a, b, c] = combo;
        if (
          cells[a].innerText &&
          cells[a].innerText === cells[b].innerText &&
          cells[b].innerText === cells[c].innerText
        ) {
          status.innerText = `üéâ Ng∆∞·ªùi ch∆°i ${cells[a].innerText} th·∫Øng!`;
          gameOver = true;
          return;
        }
      }

      // Ki·ªÉm tra h√≤a
      if ([...cells].every(cell => cell.innerText !== "")) {
        status.innerText = "ü§ù H√≤a r·ªìi!";
        gameOver = true;
      }
    }

    function handleClick(event) {
      const cell = event.target;
      if (cell.innerText || gameOver) return;

      cell.innerText = currentPlayer;
      checkWin();
      currentPlayer = currentPlayer === "‚ùå" ? "‚≠ï" : "‚ùå";
    }

    function resetGame() {
      game.innerHTML = "";
      gameOver = false;
      currentPlayer = "‚ùå";
      status.innerText = "";
      cells = [];

      for (let i = 0; i < 9; i++) {
        const cell = document.createElement("div");
        cell.classList.add("cell");
        cell.addEventListener("click", handleClick);
        game.appendChild(cell);
        cells.push(cell);
      }
    }

    resetGame();
  </script>
</body>
</html>
